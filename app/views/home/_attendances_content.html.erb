<div class="box">
  <div class="box-header with-border">
    <div class="box-tools">
    </div>
  </div><!-- /.box-header -->
  <div class="box-body table-responsive no-padding">
    <table class="table table-hover">
      <thead>
      <tr>
        <th><%= t '.full_name' %></th>
        <th><%= t '.check_in' %></th>
        <th><%= t '.check_out' %></th>
      </tr>
      </thead>
      <tbody>
      <% attendances.each do |attendance| %>
          <tr <%= set_style_if_late(attendance) %>>
            <td><%= attendance.user_full_name %></td>
            <% if attendance.check_in? %>
                <td><%= attendance.check_in %></td>
            <% else %>
                <td>
                  <i class="fa fa-times" style="color:#cb5a5e;"></i>
                </td>
            <% end %>
            <% if attendance.check_out? %>
                <td><%= attendance.check_out %></td>
            <% else %>
                <td>
                  <i class="fa fa-times" style="color:#cb5a5e;"></i>
                </td>
            <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div><!-- /.box-body -->
  <div class="box-footer clearfix">
    <%= custom_paginator attendances, 'no-margin pull-right' %>
  </div>
  <div class="box-footer">
    <div class="text-center">
      <%= link_to t('helpers.back'), authenticated_root_path, class: 'btn btn-flat btn-danger' %>
    </div>
  </div>
</div>
