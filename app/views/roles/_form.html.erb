<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title"><%= t '.title' %></h3>
    <div class="box-tools">
    </div>
  </div>
  <!-- /.box-header -->
  <!-- form start -->
  <%= form_for(role, html: {class: 'form-horizontal'}, validate: true) do |f| %>
      <div class="box-body">
        <div class="form-group">
          <%= f.label :name, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :name, class: 'form-control', autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :key, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :key, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :description, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :description, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :scope, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.select :scope, Role.scopes.keys.map { |scope| [scope.humanize, scope] },
                         {include_blank: t('helpers.select.prompt')}, class: 'form-control' %>
          </div>
        </div>
      </div>
      <!-- /.box-body -->
      <div class="box-footer">
        <div class="col-sm-offset-2">
          <%= f.button t('helpers.submit.submit', model: t('.resource')), class: 'btn btn-flat btn-success' %>
          <%= link_to t('.back'), roles_path, class: 'btn btn-flat btn-danger' %>
        </div>
      </div>
  <% end %>
</div>
