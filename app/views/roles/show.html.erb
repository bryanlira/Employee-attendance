<div class="col-md-8 col-md-offset-2">
  <section class="content">
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title"><%= t '.title' %> <b><%= @role.name %></b></h3>
        <div class="box-tools">
        </div>
      </div>
      <!-- /.box-header -->
      <!-- form start -->
      <%= form_for(@role, html: {class: 'form-horizontal'}, validate: true) do |f| %>
          <div class="box-body">
            <div class="form-group">
              <%= f.label :name, class: 'col-sm-2 control-label' %>
              <div class="col-sm-10">
                <%= f.text_field :name, class: 'form-control', disabled: true %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :key, class: 'col-sm-2 control-label' %>
              <div class="col-sm-10">
                <%= f.text_field :key, class: 'form-control', disabled: true %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :description, class: 'col-sm-2 control-label' %>
              <div class="col-sm-10">
                <%= f.text_area :description, class: 'form-control', disabled: true %>
              </div>
            </div>
          </div>
          <!-- /.box-body -->
          <div class="box-footer">
            <div class="text-center">
              <%= link_to t('helpers.back'), roles_path, class: 'btn btn-danger' %>
            </div>
          </div>
      <% end %>
    </div>
  </section>
</div>
